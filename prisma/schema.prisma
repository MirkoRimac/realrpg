generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  partyId      String?
  party        Party?   @relation(fields: [partyId], references: [id])
  xp   Int @default(0)
  gold Int @default(0)

  transactions WalletTransaction[]
  completions  QuestCompletion[]

  createdAt    DateTime @default(now())
}

model Party {
  id        String   @id @default(uuid())
  name      String
  members   User[]
  quests    Quest[]

  completions   QuestCompletion[]
  transactions  WalletTransaction[]

  createdAt DateTime @default(now())
}


model Quest {
  id          String     @id @default(uuid())
  title       String
  description String?
  startAt     DateTime?
  dueAt       DateTime?
  xpReward    Int        @default(10)
  goldReward  Int        @default(5)
  status      QuestStatus @default(OPEN)

  partyId     String
  party       Party      @relation(fields: [partyId], references: [id])

  completions QuestCompletion[]
  transactions WalletTransaction[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum QuestStatus {
  OPEN
  COMPLETED
}

model QuestCompletion {
  id        String   @id @default(uuid())
  questId   String
  quest     Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  partyId   String
  party     Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([questId]) // eine Quest kann nur einmal abgeschlossen werden
}

model WalletTransaction {
  id        String @id @default(uuid())

  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  partyId   String
  party     Party  @relation(fields: [partyId], references: [id], onDelete: Cascade)

  type      WalletTxType
  xpChange  Int    @default(0)
  goldChange Int   @default(0)
  note      String?

  questId   String?
  quest     Quest? @relation(fields: [questId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([partyId, createdAt])
}

enum WalletTxType {
  QUEST_REWARD
  MANUAL_ADJUSTMENT
}
